{
    "name": "XKCD Viewer",
    "version": "1.0",
    "description": "Minimalistic and useful viewer for XKCD comics",
    "manifest_version": 2,
    "author": "cybor97",
    "permissions": [
        "https://*.xkcd.com/*"
    ],
    "browser_action": {
        "default_popup": "main.html",
        "default_icon": "xkcd.ico"
    }
}