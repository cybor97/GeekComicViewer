{
    "name": "XKCD Viewer",
    "version": "1.0",
    "description": "Minimalistic and useful viewer for XKCD comics",
    "manifest_version": 2,
    "author": "cybor97",
    "permissions": [
        "https://*.xkcd.com/*"
    ],
    "browser_action": {
        "default_popup": "main.html",
        "default_icon": {
            "225": "icons/xkcd225.png",
            "128": "icons/xkcd128.png",
            "64": "icons/xkcd64.png",
            "48": "icons/xkcd48.png",
            "32": "icons/xkcd32.png",
            "16": "icons/xkcd16.png"
        }
    }
}